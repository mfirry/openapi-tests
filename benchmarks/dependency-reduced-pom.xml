<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>eu.firry</groupId>
  <artifactId>openapi-benchmarks</artifactId>
  <version>4.0.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openapitools</groupId>
        <artifactId>openapi-generator-maven-plugin</artifactId>
        <version>7.19.0</version>
        <executions>
          <execution>
            <id>generate-resteasy</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/src/main/resources/openapi.json</inputSpec>
              <generatorName>java</generatorName>
              <output>${project.build.directory}/generated-sources/resteasy</output>
              <apiPackage>eu.firry.benchmarks.resteasy.api</apiPackage>
              <modelPackage>eu.firry.benchmarks.resteasy.model</modelPackage>
              <invokerPackage>eu.firry.benchmarks.resteasy</invokerPackage>
              <configOptions>
                <library>resteasy</library>
                <useJakartaEe>true</useJakartaEe>
                <serializableModel>true</serializableModel>
                <openApiNullable>false</openApiNullable>
              </configOptions>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
            </configuration>
          </execution>
          <execution>
            <id>generate-restclient</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/src/main/resources/openapi.json</inputSpec>
              <generatorName>java</generatorName>
              <output>${project.build.directory}/generated-sources/restclient</output>
              <apiPackage>eu.firry.benchmarks.restclient.api</apiPackage>
              <modelPackage>eu.firry.benchmarks.restclient.model</modelPackage>
              <invokerPackage>eu.firry.benchmarks.restclient</invokerPackage>
              <configOptions>
                <library>restclient</library>
                <useJakartaEe>true</useJakartaEe>
                <serializableModel>true</serializableModel>
                <openApiNullable>false</openApiNullable>
              </configOptions>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
            </configuration>
          </execution>
          <execution>
            <id>generate-microprofile</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/src/main/resources/openapi.json</inputSpec>
              <generatorName>java</generatorName>
              <output>${project.build.directory}/generated-sources/microprofile</output>
              <apiPackage>eu.firry.benchmarks.microprofile.api</apiPackage>
              <modelPackage>eu.firry.benchmarks.microprofile.model</modelPackage>
              <invokerPackage>eu.firry.benchmarks.microprofile</invokerPackage>
              <configOptions>
                <library>microprofile</library>
                <serializationLibrary>jackson</serializationLibrary>
                <useJakartaEe>true</useJakartaEe>
                <serializableModel>true</serializableModel>
                <openApiNullable>false</openApiNullable>
              </configOptions>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>fix-microprofile-jakarta</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <replace />
                <replace />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <source>21</source>
          <target>21</target>
          <annotationProcessorPaths>
            <path>
              <groupId>org.openjdk.jmh</groupId>
              <artifactId>jmh-generator-annprocess</artifactId>
              <version>${jmh.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>benchmarks</finalName>
              <transformers>
                <transformer>
                  <mainClass>org.openjdk.jmh.Main</mainClass>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.openjdk.jmh</groupId>
      <artifactId>jmh-generator-annprocess</artifactId>
      <version>1.37</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.fasterxml.jackson</groupId>
        <artifactId>jackson-bom</artifactId>
        <version>${jackson.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <jmh.version>1.37</jmh.version>
    <java.version>21</java.version>
    <resteasy.version>6.2.9.Final</resteasy.version>
    <spring.version>6.2.3</spring.version>
    <jackson.version>2.18.2</jackson.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
